{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list">
                {{#each posts}}
                    <article>
                        <div class="title-date">
                            <h2><a href="/detail/{{slug}}">{{this.title}}</a></h2>
                            <h3><time>{{this.date}}</time></h3>
                        </div>
                        {{#if this.tags}}
                            <div class="tags-index">
                                <ul>
                                    {{#each this.tags}}
                                        <h4><li>{{this}}</li></h4>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/if}}
                    </article>
                {{/each}}
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}


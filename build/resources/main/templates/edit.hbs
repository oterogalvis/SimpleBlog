{{#partial "content"}}
    <div class="container-edit">
        <div class="edit-entry">
            <h2 class="comment-h2">Edit Entry</h2>

            <form id="entryfrom" class="entryfrom" method="post" action="/{{post.slug}}/save">
                <label for="title"> Title</label>
                <input type="text" name="title" value="{{post.title}}"><br>

                <label for="entry">Entry</label>
                <textarea rows="5" name="entry">{{post.body}}</textarea>
            </form>

            <div class="tag-block">
                <label for="tags"> Tags</label>
                {{#if post.tags}}
                    <ul>
                        {{#each post.tags}}
                            <li>
                                <form action="/delete/tag/{{post.slug}}" method="post">
                                    {{this}}
                                    <button type="submit" name="tag" value="{{this}}" class="other-button">
                                        <i class="material-icons delete-icon">delete</i>
                                    </button>
                                </form>
                            </li>
                        {{/each}}
                    </ul>
                {{/if}}
                <form class="form-tag" method="post" action="/add/tag/{{post.slug}}">
                    <input type="text" name="tag" placeholder="Add new tag">
                    <button class="button">Add</button>
                </form>
            </div>
            <div class="button-bar">
                <button form="entryfrom" class="button">Save Entry</button>
                <a href="/delete/{{post.slug}}" class="button">Delete Entry</a>
                <a href="/detail/{{post.slug}}" class="button button-secondary">Cancel</a>
            </div>
        </div>
    </div>
    </section>
{{/partial}}

{{> base.hbs}}

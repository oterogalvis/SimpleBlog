{{#partial "content"}}
    <section>
        <div class="container">
            <div class="entry-list single">
                <article>
                    <div class="article-header">
                    <h1>{{post.title}}</h1>
                    <h4><time>{{post.date}}</time></h4>
                    </div>
                    <div class="entry">
                        <p>{{post.body}}</p>
                        {{#if post.tags}}
                            <div class="tags-details">
                            <h3>Tags</h3>
                            <ul>
                                {{#each post.tags}}
                                    <li>{{this}}</li>
                                {{/each}}
                            </ul>
                            </div>
                        {{/if}}
                        <p><a class="button" href="/edit/{{post.slug}}">Edit Entry</a></p>
                    </div>
                </article>
            </div>
        </div>
    </section>

    <section class="entry-comments">
        <div class="container">
            {{#if post.comments}}
                <h2 class="comment-h2">Comments</h2>
                {{#each post.comments}}
                    <div class="comment">
                        <strong>{{this.title}}</strong>
                        <time>{{this.date}}</time>
                        <p>{{this.body}}</p>
                    </div>
                {{/each}}
            {{/if}}
            <!--TODO: Add new comment-->
            <div class="new-comment">
                <form method="post" action="/comment/{{post.slug}}">
                    <label for="name"> Name</label>
                    <input type="text" name="name"><br>
                    <label for="comment">Comment</label>
                    <textarea rows="5" name="comment"></textarea>
                    <input type="submit" value="Post Comment" class="button">
                </form>
            </div>
        </div>
    </section>
{{/partial}}

{{> base.hbs}}

{{#partial "content"}}
    <div class="container-new">
        <div class="edit-entry">
            <h2 class="comment-h2">Publish New Entry</h2>
            <form id="entryfrom" class="entryfrom" method="post" action="/new">
                <label for="title"> Title</label>
                <input type="text" name="title"><br>
                <label for="entry">Entry</label>
                <textarea rows="5" name="entry"></textarea>
                <input type="text" name="tags" placeholder="Add tags separated by commas ','">
            </form>
        </div>
        <div class="button-bar">
            <button form="entryfrom" class="button">publish entry</button>
            <a href="/{{post.slug}}" class="button button-secondary">Cancel</a>
        </div>
    </div>
    </div>
    </section>
{{/partial}}

